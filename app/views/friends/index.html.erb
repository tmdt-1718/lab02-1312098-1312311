<h1 align="center">All your friend</h1>
<div align="center">

    <% @friends.each do |friend| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li>
                    <%= cl_image_tag friend.avatar ,  :width => 150, :height => 150, 
                    :crop => :fill, :gravity => :face,
                    :radius => :max, class: "avatar img-circle"  if friend.avatar %>
                </li>
                <li class="user-title">
                    <%= link_to  friend.username, user_path(friend) %>
                </li>
                <li>
                    <small> <%= friend.email %></small>
                </li>
                <li><%= link_to "Unfriend", "#", class: "btn btn-danger btn-small" %></li>
                <% if !friend %>
                    <li><%= link_to "Block", "#", class: "btn btn-danger btn-small"  %></li>
                <% else %>
                    <li><%= link_to "UnBlock", "#", class: "btn btn-danger btn-small"  %></li>
                <% end %>
            </div>
        </div>
    </ul>
    <% end %>

</div>


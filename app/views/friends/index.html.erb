<h1 align="center">All your friend</h1>
<div align="center">

    <% @friends.each do |friend| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <div class="user-info">
                    <li>
                        <%= cl_image_tag friend.avatar ,  :width => 150, :height => 150, 
                        :crop => :fill, :gravity => :face,
                        :radius => :max, class: "avatar img-circle"  if friend.avatar %>
                    </li>
                    <li class="user-title">
                        <%= link_to  friend.username, user_path(friend) %>
                    </li>
                    <li>
                        <small> <%= friend.email %></small>
                    </li>
                </div>
        
                <div class="user-action">
                    <%= link_to "Unfriend", "#", class: "btn btn-danger btn-xs" %>
                    <% if !friend %>
                        <%= link_to "Block", "#", class: "btn btn-danger btn-xs"  %>
                    <% else %>
                        <%= link_to "UnBlock", "#", class: "btn btn-danger btn-xs"  %>
                    <% end %>
                </div>
            </div>
        </div>
    </ul>
    <% end %>

</div>


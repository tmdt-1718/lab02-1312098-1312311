<h1 align="center">All Email App Users</h1>
<div align="center">

    <% @users.each do |user| %>
    <% if current_user != user %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li>
                    <%= cl_image_tag user.avatar ,  :width => 150, :height => 150, 
                    :crop => :fill, :gravity => :face,
                    :radius => :max, class: "avatar img-circle"  if user.avatar %>
                </li>
                <li class="user-title">
                    <%= link_to  user.username, user_path(user) %>
                </li>
                <li>
                    <small> <%= user.email %></small>
                </li>
                <% if logged_in?  %>
                    <% if current_user.friend?(user) %>
                        <li><%= link_to "Unfriend", "#", class: "btn btn-danger" %></li>
                    <% else %>
                        <li><%= link_to  "Add friend", "#", class: "btn btn-primary" %></li>
                    <% end %>
                <% end %>
            </div>
        </div>
    </ul>
    <% end %>
    <% end %>

</div>


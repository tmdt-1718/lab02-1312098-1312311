<h2 align="center"><strong>Information</strong></h2>
<div class="well col-xs-8 col-xs-offset-2 infor-user">
    <ul class="listing">
        <div class="row center">
            <div class="col-md-4 col-md-offset-4">
                
                <li><%= cl_image_tag @user.avatar , :width => 150, :height => 150, 
                    :crop => :fill, :gravity => :face,
                    :radius => :max if @user.avatar %></li>
                <li class="article-title">
                    <%= link_to  @user.username, user_path(@user) %>
                </li>
                <li>
                    Email: <%= @user.email %>
                </li>
            </div>
        </div>
    </ul>
</div>

